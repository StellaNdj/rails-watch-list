<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1616530940355-351fabd9524b?q=80&w=1935&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container">
    <h1>My lists</h1>
    <p>All your movies lists in one simple place</p>
  </div>
</div>

<div class="container btn-flex-end">
  <%= link_to "Add list", new_list_path(@lists), class: 'btn btn-flat' %>
</div>

<div class="container-grid">
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')">
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1589569334232-fdc917c38226?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')">
      <% end %>
      <div class="card-display">
        <%= link_to list.name, list_path(list) %><br>
        <%= link_to "Delete", list_path(list),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'card-display-delete' %>
      </div>
      </div>
    <% end %>
</div>
